<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.yeeku.model">
	<class name="Jzletter" table="jzletter">
		<id	name="id" column="id">
			<generator class="native"/>
		</id>
		<property name="title" type="java.lang.String">
            <column name="title" length="80"/>
        </property>
        <property name="content" type="java.lang.String">
            <column name="content" length="10000"/>
        </property>
        <property name="sendtime" type="java.util.Date">
            <column name="sendtime" length="80"/>
        </property>
        <property name="sid" type="java.lang.String">
            <column name="sid" length="22000"/>
        </property>
	</class>	
</hibernate-mapping>