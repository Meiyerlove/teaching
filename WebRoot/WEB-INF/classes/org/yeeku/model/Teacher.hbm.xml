<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.yeeku.model">
	<class name="Teacher"	table="teacher">
		<id	name="id" column="id">
			<generator class="native"/>
		</id>
		<property name="tid" type="java.lang.String">
            <column name="tid" length="45"/>
        </property>
        <property name="name" type="java.lang.String">
            <column name="name" length="45"/>
        </property>
        <property name="email" type="java.lang.String">
            <column name="email" length="80"/>
        </property>
        <property name="cellphone" type="java.lang.String">
            <column name="cellphone" length="80"/>
        </property>
        <property name="sex" type="java.lang.Integer">
            <column name="sex" length="10"/>
        </property>
        <property name="_status" type="java.lang.Integer">
            <column name="status" length="10"/>
        </property>
	</class>	
</hibernate-mapping>